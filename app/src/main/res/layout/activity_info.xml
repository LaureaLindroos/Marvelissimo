<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="@dimen/info_img_width"
            android:layout_height="@dimen/info_img_height" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/info_img"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="142dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="142dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/title" android:layout_marginBottom="20dp"
            android:layout_marginTop="50dp" android:contentDescription="@string/info_img_desc"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/title"
            app:layout_constraintTop_toBottomOf="@+id/info_img" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="382dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginTop="20dp"
            android:textSize="@dimen/info_title_size" android:layout_marginStart="177dp"
            android:layout_marginEnd="177dp"/>

    <androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                           android:layout_width="match_parent"
                                           android:layout_height="match_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <androidx.cardview.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
            >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <include layout="@layout/expansion_panel_sample_panel"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#CCC"/>

                    <include layout="@layout/expansion_panel_sample_panel"/>

                    <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="#CCC"/>

                    <include layout="@layout/expansion_panel_sample_panel"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</android.support.constraint.ConstraintLayout>